<Window x:Class="Pool.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pool.WpfApp"
        mc:Ignorable="d"
        Title="Pool Table" Width="900" Height="600">
    <Grid>
        <!-- Stoł bilardowy -->
        <Canvas Background="Green" Width="800" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Krawędzie stołu -->
            <Rectangle Width="800" Height="400" Stroke="Black" StrokeThickness="3"/>
        </Canvas>
        <!-- Przycisk -->
        <Button Content="Uruchom" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Command="{Binding StartPoolCommand}"/>
        <TextBox x:Name="numberOfBallsTextBox" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Text="{Binding NumberOfBalls}"/>
        <Label Content="Liczba kul: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,11,0,0"/>
     </Grid>
</Window>
